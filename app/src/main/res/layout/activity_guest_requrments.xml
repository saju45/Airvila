<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Host.Activity.GuestRequrmentsActivity">



    <ScrollView
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ImageView
                android:id="@+id/backBtn"
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:fontFamily="@font/alike"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:text="Guest requirements"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <TextView
                android:textSize="18sp"
                android:text="Airbnb has requirements that all guests must meet before booking:"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/text1"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Airbnb's requirements"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:id="@+id/view2"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="View"
                    app:layout_constraintBottom_toBottomOf="@id/text1"
                    app:layout_constraintTop_toTopOf="@id/text1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/view2"
                    app:layout_constraintEnd_toEndOf="@id/view2"
                    app:layout_constraintStart_toStartOf="@id/view2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/text2"
                    android:textSize="16sp"
                    android:text="Confirmed email address, confirmed p...."
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/text1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/lightGray"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/text2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/profilePhot"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Profile Photo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <Switch
                    android:id="@+id/view3"
                    app:layout_constraintBottom_toBottomOf="@id/profilePhot"
                    app:layout_constraintTop_toTopOf="@id/profilePhot"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/profilePhotDes"
                    android:textSize="16sp"
                    android:text="If you tun on this requirements, you'll be able to see guests profile photos after a booking is confirmed, but not before. "
                    android:layout_marginTop="3dp"
                    app:layout_constraintTop_toBottomOf="@id/profilePhot"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/view3"
                    android:layout_width="0dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/lightGray"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/profilePhotDes"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:fontFamily="@font/alike"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="Instant Book only"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="16sp"
                android:text="You can set these requirements if you allow gursts to book instantly. Any one who doesn't meet your requirements will send a request. "
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/guvermentId"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Government -issued ID"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <Switch
                    android:id="@+id/stwch2"
                    app:layout_constraintBottom_toBottomOf="@id/guvermentId"
                    app:layout_constraintTop_toTopOf="@id/guvermentId"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/govermentDes"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:text="Require guests to submit government \nID to Airbnb."
                    app:layout_constraintTop_toBottomOf="@id/guvermentId"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/stwch2"
                    android:layout_width="0dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/lightGray"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/govermentDes"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/hostText"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Recommendation from other \nhosts"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <Switch
                    android:id="@+id/stwch3"
                    app:layout_constraintBottom_toBottomOf="@id/hostText"
                    app:layout_constraintTop_toTopOf="@id/hostText"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/hostDes"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:text="Require guests to have \nrecommendations from other Airbnb \nhosts and no negativereview."
                    app:layout_constraintTop_toBottomOf="@id/hostText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/stwch3"
                    android:layout_width="0dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/lightGray"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/hostDes"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/bookingText"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Booking message"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



                <TextView
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="add"
                    android:id="@+id/addText"
                    app:layout_constraintBottom_toBottomOf="@id/bookingText"
                    app:layout_constraintTop_toTopOf="@id/bookingText"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <View
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/addText"
                    app:layout_constraintEnd_toEndOf="@id/addText"
                    app:layout_constraintStart_toStartOf="@id/addText"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/bookingDes"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:text="Require guests to read and respond to a message before they confirm their reservation."
                    app:layout_constraintTop_toBottomOf="@id/bookingText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/addText"
                    android:layout_width="0dp"
                    android:layout_marginEnd="15dp"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/lightGray"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/bookingDes"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>



            <TextView
                android:textColor="@color/white"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </ScrollView>



    <View
        android:id="@+id/view1"
        android:background="@color/lightGray"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/saveBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveBtn"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg"
        android:backgroundTint="@color/black"
        android:text="Save"
        android:textColor="@color/white"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>