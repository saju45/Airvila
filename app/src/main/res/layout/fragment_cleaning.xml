<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Activitys.Host.Fragment.CleaningFragment">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/cleaningListRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginStart="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alike"
            android:textSize="20sp"
            android:text="Getting started"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <androidx.cardview.widget.CardView
            android:layout_marginTop="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            >



            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:scaleType="centerCrop"
                    android:src="@drawable/cleaning"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>


                <TextView
                    android:id="@+id/learCleaning"
                    android:fontFamily="@font/alike"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Learn cleaning \ntechniques for your \nhome"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#292323"
                    android:textSize="16sp"
                    android:text="Learn more about the five-step cleaning process through this short video. We cover the cleaning basics and show you how it's done."
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:fontFamily="@font/alike"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="Watch the video"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_marginTop="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            android:elevation="8dp"
            app:cardCornerRadius="10dp"
            >



            <LinearLayout
                android:layout_marginBottom="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/clening_process2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>


                <TextView
                    android:fontFamily="@font/alike"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Explore the enhanced \ncleaning process"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#292323"
                    android:textSize="16sp"
                    android:text="Visit the Airbnb Resource Center for detailed articles on enhanced cleaning -from getting started to marketing your listing to guests"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>



                <androidx.constraintlayout.widget.ConstraintLayout
                    android:padding="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/btn_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:fontFamily="@font/alike"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:text="Go to Resource Center"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



            </LinearLayout>



        </androidx.cardview.widget.CardView>



        <TextView
            android:fontFamily="@font/alike"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:text="Tips"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cleaningTipsRv"
            android:layout_marginTop="20dp"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>





</ScrollView>