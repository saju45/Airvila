<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activitys.Host.Activity.LinkAirbnbCalendarActivity">


    <ImageView
        android:id="@+id/back"
        android:src="@drawable/back"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="@font/alike"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:text="Link your Airbnb\ncalendars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView

        android:textSize="16sp"
        android:text="Link you related Airbnb calendars to avoid \ndouble bookings."
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#179E91"
        android:textSize="16sp"
        android:text="Lear more"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="5dp"
        android:background="@color/lightGray"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="10dp"
        android:paddingTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/calendar"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Create linked calendars"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <ImageView
            android:src="@drawable/plus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_marginTop="5dp"
        android:background="@color/lightGray"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>