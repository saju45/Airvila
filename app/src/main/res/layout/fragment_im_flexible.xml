<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.Fragments.ImFlexibleFragment">


    <TextView
        android:textStyle="bold"
        android:id="@+id/stayForText"
        android:textSize="16sp"
        android:text="Stay for a"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/changeText"
        android:layout_marginStart="3dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="week"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/stayForText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/weekenText"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/search_bg"
        android:text="Weekend"
        android:textSize="14sp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@id/stayForText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/weekText"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/search_bg"
        android:text="Week"
        android:textSize="14sp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@id/stayForText"
        app:layout_constraintStart_toEndOf="@id/weekenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/monthText"
        android:textColor="@color/black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/search_bg"
        android:text="Month"
        android:textSize="14sp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toBottomOf="@id/stayForText"
        app:layout_constraintStart_toEndOf="@id/weekText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:id="@+id/goText"
        android:textSize="16sp"
        android:text="Go in"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/weekenText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="3dp"
        android:id="@+id/anytimeText"
        android:textSize="16sp"
        android:text="Anytime"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/weekenText"
        app:layout_constraintStart_toEndOf="@id/goText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylceView"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/goText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>







</androidx.constraintlayout.widget.ConstraintLayout>