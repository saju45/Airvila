<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Activity.EditPersonalInfoActivity">

    <ImageView
        android:id="@+id/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <androidx.appcompat.widget.AppCompatButton
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/saveButton"
        android:text="save"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#D898AE"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view1"
        android:background="@color/lightGray"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/saveButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <ScrollView
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintTop_toBottomOf="@id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <TextView
                android:layout_marginStart="20dp"
                android:fontFamily="@font/alike"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="Edit personal info"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="6dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:id="@+id/nameText"
                    android:textSize="14sp"
                    android:text="First name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/firstNameEt"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:hint="Your First name"
                    app:layout_constraintTop_toBottomOf="@id/nameText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="6dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:id="@+id/name2Text"
                    android:textSize="14sp"
                    android:text="Last name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <EditText
                    android:id="@+id/lastNameEt"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:hint="Your Last name"
                    app:layout_constraintTop_toBottomOf="@id/name2Text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/genderLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="14dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:textSize="18sp"
                    android:text="Gender"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/down_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/birthLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="6dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:id="@+id/birthDateText"
                    android:textSize="14sp"
                    android:text="Barth date"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/birthDateEt"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="*/*/*"
                    app:layout_constraintTop_toBottomOf="@id/birthDateText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.cardview.widget.CardView
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:padding="15dp"
                android:elevation="4dp"
                app:cardElevation="5dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout

                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="7dp"
                        android:id="@+id/gmail"
                        android:textSize="16sp"
                        android:text="Email"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <TextView
                        android:id="@+id/EmailEt"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="7dp"
                        android:background="@color/white"
                        android:textSize="16sp"
                        android:text="simple01@gmail.com"
                        app:layout_constraintTop_toBottomOf="@id/gmail"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.cardview.widget.CardView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/numberLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:id="@+id/phoneText"
                    android:textSize="16sp"
                    android:text="Phone number"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/phoneNumber"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:textSize="14sp"
                    android:text="provide phone number"
                    app:layout_constraintTop_toBottomOf="@id/phoneText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/numberAddText"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Add"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/numberAddText"
                    app:layout_constraintEnd_toEndOf="@id/numberAddText"
                    app:layout_constraintStart_toStartOf="@id/numberAddText"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/GovernmentLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="6dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:id="@+id/gvmtText"
                    android:textSize="16sp"
                    android:text="Government ID"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/governmentId"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:textSize="14sp"
                    android:text="provide phone number"
                    app:layout_constraintTop_toBottomOf="@id/gvmtText"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/governmentAddText"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Add"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/governmentAddText"
                    app:layout_constraintEnd_toEndOf="@id/governmentAddText"
                    app:layout_constraintStart_toStartOf="@id/governmentAddText"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <View
                android:background="@color/lightGray"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/emContactLayout"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="7dp"
                    android:id="@+id/emgText"
                    android:textSize="16sp"
                    android:text="Emergency contact"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>




                <TextView
                    android:id="@+id/emergencyAddText"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:text="Add"
                    app:layout_constraintBaseline_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:background="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/emergencyAddText"
                    app:layout_constraintEnd_toEndOf="@id/emergencyAddText"
                    app:layout_constraintStart_toStartOf="@id/emergencyAddText"
                    android:layout_width="0dp"
                    android:layout_height="1dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>