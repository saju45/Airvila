<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_marginTop="20dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="3dp"
    android:elevation="8dp"
    app:cardElevation="7dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:textColor="@color/black"
            android:textSize="14sp"
            android:id="@+id/requestText"
            android:text="Confirmed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Mohammad Yunus"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/requestText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/date"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Oct 5-7"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/title"
            android:textSize="16sp"
            android:text="Elegant Ac stay at Bashundhara"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/user_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/imageLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/circler_bg"
                android:backgroundTint="@color/black"
                android:id="@+id/image"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="40dp"
                android:layout_height="40dp"/>


            <ImageView
                android:id="@+id/addBtn"
                android:layout_marginStart="-6dp"
                android:src="@drawable/plus"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintTop_toTopOf="@id/image"
                app:layout_constraintEnd_toEndOf="@id/image"
                app:layout_constraintStart_toStartOf="@id/image"
                android:layout_width="8dp"
                android:layout_height="8dp"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/count"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:text="3"
                android:layout_marginStart="2dp"
                app:layout_constraintBottom_toBottomOf="@id/addBtn"
                app:layout_constraintTop_toTopOf="@id/addBtn"
                app:layout_constraintStart_toEndOf="@id/addBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImg"
                android:layout_marginEnd="-8dp"
                android:src="@drawable/photo1"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintTop_toTopOf="@id/image"
                app:layout_constraintEnd_toStartOf="@id/image"
                android:layout_width="42dp"
                android:layout_height="42dp"/>






        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>