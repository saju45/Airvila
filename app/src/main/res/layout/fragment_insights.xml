<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.Host.Fragment.InsightsFragment">


    <TextView
        android:id="@+id/text1"
        android:fontFamily="@font/alike"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="Insights"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/opportunitiesText"
        android:textSize="16sp"
        android:text="Opportunities"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12sp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/statsText"
        android:textSize="16sp"
        android:text="Stats"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="@id/opportunitiesText"
        app:layout_constraintTop_toTopOf="@id/opportunitiesText"
        app:layout_constraintStart_toEndOf="@id/opportunitiesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/cleaningText"
        android:textSize="16sp"
        android:text="Cleaning"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12sp"
        app:layout_constraintTop_toBottomOf="@id/text1"
        app:layout_constraintStart_toEndOf="@id/statsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




    <View
        android:id="@+id/view1"
        android:background="@color/lightGray"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/opportunitiesText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <View
        android:id="@+id/opportunitiesView"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/opportunitiesText"
        app:layout_constraintEnd_toEndOf="@id/opportunitiesText"
        app:layout_constraintStart_toStartOf="@id/opportunitiesText"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <View
        android:visibility="gone"
        android:id="@+id/statsView"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/statsText"
        app:layout_constraintEnd_toEndOf="@id/statsText"
        app:layout_constraintStart_toStartOf="@id/statsText"
        android:layout_width="0dp"
        android:layout_height="1dp"/>

    <View
        android:visibility="gone"
        android:id="@+id/cleanigView"
        android:background="@color/black"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cleaningText"
        app:layout_constraintEnd_toEndOf="@id/cleaningText"
        app:layout_constraintStart_toStartOf="@id/cleaningText"
        android:layout_width="0dp"
        android:layout_height="1dp"/>



    <FrameLayout
        android:id="@+id/insightsFrameLayout"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>