<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/header"
        android:fontFamily="@font/alike"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="Cancellation policy"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@id/headerDescription"
        android:textSize="16sp"
        android:text="whdidndk kdfdofdlfkd fdfh dfdofd fdkf a"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <TextView
        android:id="@+id/title"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="dkfdofd dfd "
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/headerDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:id="@+id/titleDescription"
        android:text="dhdkfdfkdf kdfdkfdkfd df dfdfdf dfdfdfdfdf ddfdfdf dkfdfdlkfkd fkdfidfkfdkfd"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checkBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <RadioButton
        android:id="@+id/checkBtn"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:id="@+id/view1"
        android:background="@color/lightGray"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/titleDescription"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>