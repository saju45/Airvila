<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.Host.Activity.CheckInSettingActivity">




    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <ImageView
           android:id="@+id/backBtn"
           android:src="@drawable/back"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>


        <TextView
            android:fontFamily="@font/alike"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="Check-in setting"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:fontFamily="@font/alike"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="Check-in window"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:id="@+id/arriveAfterLayout"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Arrive after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Flexible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:background="@color/lightGray"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/arriveBeforeLayout"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Arrive before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="Flexible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:background="@color/lightGray"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>


        <TextView
            android:fontFamily="@font/alike"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="Checkout"
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/leaveBeforeLayout"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Leave before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:textColor="@color/black"
                android:textSize="15sp"
                android:text="11:00 AM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <View
                android:background="@color/lightGray"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>




        <TextView
            android:layout_marginTop="25dp"
            android:fontFamily="@font/alike"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:text="Days unavailable for \ncheck-in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/notSet"
            android:textSize="18sp"
            android:text="Not set"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <View
        android:id="@+id/view1"
        android:background="@color/lightGray"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@id/saveBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg"
        android:backgroundTint="#39AFA4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>