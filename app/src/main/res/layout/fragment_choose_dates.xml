<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.Fragments.ChooseDatesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <CalendarView
            android:id="@+id/calendarId"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>


        <HorizontalScrollView
            android:scrollbars="none"
            android:layout_marginBottom="10dp"
            android:id="@+id/horizontalScroll"
            app:layout_constraintTop_toBottomOf="@id/calendarId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/search_bg"
                    android:padding="8dp"
                    android:text="Exact dates"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:layout_marginEnd="7dp"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/pluse_minus"
                    android:background="@drawable/search_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="1 day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="7dp"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/pluse_minus"
                    android:background="@drawable/search_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="2 day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginEnd="7dp"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/pluse_minus"
                    android:background="@drawable/search_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="3 day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginEnd="7dp"
                    android:padding="8dp"
                    android:drawableLeft="@drawable/pluse_minus"
                    android:background="@drawable/search_bg"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="7 day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </HorizontalScrollView>

        <View
            android:background="@color/lightGray"
            android:id="@+id/view4"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/horizontalScroll"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <View
            android:background="@color/white"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/horizontalScroll"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>