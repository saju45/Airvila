<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical"
    tools:context=".Activitys.Activity.PrivacyActivity">

    <ImageView
        android:id="@+id/back"
        android:src="@drawable/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:fontFamily="@font/alike"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="privacy and sharing"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="Manage your data, third-party tools, and \n sharing setting"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/privacyText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/manageDataLayout"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="manage your data"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/text1"
            app:layout_constraintTop_toTopOf="@id/text1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="14sp"
            android:text="Download your personal data, or request to \n deactivate or delete your account"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:background="@color/lightGray"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sharingLayout"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text2"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="Sharing"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:src="@drawable/right_arrow"
            app:layout_constraintBottom_toBottomOf="@id/text2"
            app:layout_constraintTop_toTopOf="@id/text2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="14sp"
            android:text="Decide how your profile and activity are \n shown to others"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>