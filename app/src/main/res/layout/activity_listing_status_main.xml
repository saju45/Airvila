<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="15dp"
    tools:context=".Activitys.Host.Activity.ListingStatusMainActivity">



    <ImageView
        android:id="@+id/backBtn"
        android:src="@drawable/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:fontFamily="@font/alike"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="Listing status"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/correct"
            android:src="@drawable/correct"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/listed"
            android:textSize="16sp"
            android:text="Listed - Guests can find your listing \n search results and request or book\navailable dates"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/correct"
            app:layout_constraintStart_toEndOf="@id/correct"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>





    </androidx.constraintlayout.widget.ConstraintLayout>



    <TextView
        android:fontFamily="@font/alike"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:text="Change listing status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/snooze"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Snooze"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/snoozeId"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Snooze"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/snoozeId"
            app:layout_constraintEnd_toEndOf="@id/snoozeId"
            app:layout_constraintStart_toStartOf="@id/snoozeId"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/text1"
            android:text="Remove your listing from search\nresult for a set period of time "
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/snooze"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:background="@color/lightGray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/unlist"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Unlist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/unlistId"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Unlist"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/unlistId"
            app:layout_constraintEnd_toEndOf="@id/unlistId"
            app:layout_constraintStart_toStartOf="@id/unlistId"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/text2"
            android:text="Remove your listing from search result  "
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/unlist"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:background="@color/lightGray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/deactivete"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Deactivate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/deactiveteId"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Deactivate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@id/deactiveteId"
            app:layout_constraintEnd_toEndOf="@id/deactiveteId"
            app:layout_constraintStart_toStartOf="@id/deactiveteId"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <TextView
            android:id="@+id/text3"
            android:text="Permanently remove your listing\n from Airbnb "
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/deactivete"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <View
            android:background="@color/lightGray"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>